<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/pink">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="325dp"
        android:layout_height="430dp"
        android:background="@drawable/dialog_shape"
        android:id="@+id/linearLayout3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:weightSum="1">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="190dp"
            android:layout_height="68dp"
            android:id="@+id/button37"
            android:layout_marginBottom="40dp"
            android:layout_above="@+id/finish_bttn"
            android:layout_centerHorizontal="true"
            android:onClick="toChildQuestionsOrange"
            android:alpha="1"
            android:background="#00000000"
            android:visibility="invisible" />


    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:id="@+id/finish_bttn"
        android:alpha="1"
        android:background="@drawable/whiteroundbutton"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3"
        android:layout_marginTop="20dp"
        android:text="next"
        android:textAllCaps="false"
        android:textColor="@color/darkGrey" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:id="@+id/cropped_final"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.41"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <ImageView
        android:id="@+id/photo_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cropped_final"
        android:layout_alignLeft="@id/cropped_final"
        android:background="@drawable/purple_photo_icon"
        android:scaleType="fitXY"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="380dp"
        android:clickable="true"
        android:onClick="do_photo_selction" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign up with your child&apos;s info"
        android:id="@+id/instruction"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="25dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/registration_contents"
        android:orientation="vertical"
        android:layout_marginLeft="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp"
            android:id="@+id/questions">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/first_name">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="first name"
                    android:textColor="@color/darkGrey"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/orange"
                    android:id="@+id/editTextFirstName"
                    android:text=""
                    android:textAlignment="textEnd" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/darkGrey"
                    android:layout_alignParentEnd="false"
                    android:layout_below="@+id/textView2">
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/last_name">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="last name"
                    android:textColor="@color/darkGrey"
                    android:id="@+id/textView3" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/orange"
                    android:textAlignment="textEnd"
                    android:background="@android:color/transparent"
                    android:text=""
                    android:id="@+id/editTextLastName" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/darkGrey"
                    android:layout_alignParentEnd="false"
                    android:layout_below="@+id/textView3">
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/gender">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="gender"
                    android:textColor="@color/darkGrey"
                    android:id="@+id/textView4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="male"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_toLeftOf="@+id/textView12"
                    android:textColor="@color/orange"
                    android:id="@+id/textViewMale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_toLeftOf="@+id/textViewFemale"
                    android:textColor="@color/darkGrey"
                    android:id="@+id/textView12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="female"
                    android:textColor="@color/darkGrey"
                    android:id="@+id/textViewFemale" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/darkGrey"
                    android:layout_alignParentEnd="false"
                    android:layout_below="@+id/textView4">
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/age">

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>